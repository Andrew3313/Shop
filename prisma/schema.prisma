generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int @id @default(autoincrement()) 
  name        String  
  imagePath   String   
  category    String   
  description String 
  price Int 
}

