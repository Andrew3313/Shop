generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  products    Product[]
}

model Product {
  id          Int       @id @default(autoincrement())
  article     Int       @unique
  name        String
  imagePath   String    
  description String
  price       Int
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id])
}

